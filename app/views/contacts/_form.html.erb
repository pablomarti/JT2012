<%
  if @contact.nil?
    @contact = Contact.new
  end
%>
<%= form_for(@contact, :remote => true) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, :placeholder => I18n.t('contact.name'), :class => "text" %>
  </div>

  <div class="field">
    <%= f.text_field :lastname, :placeholder => I18n.t('contact.lastname'), :class => "text" %>
  </div>

  <div class="field">
    <%= f.text_field :email, :placeholder => I18n.t('contact.email'), :class => "text" %>
  </div>

  <div class="field">
    <%= f.select :country_id, Country.all.collect{ |c| [c.name, c.id] } %>
    <%= f.text_field :mobile, :placeholder => I18n.t('contact.mobile'), :class => "mobile" %>
  </div>

  <div class="field">
    <%= f.text_area :comment, :placeholder => I18n.t('contact.comment') %>
  </div>

  <div class="actions">
    <%= f.submit I18n.t('contact.contact_us') %>
  </div>
<% end %>
